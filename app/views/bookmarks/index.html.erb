<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<div id="form">
  <%= render "form", bookmark: @bookmark %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>url</th>
      <th>Categories</th>
      <th>Kinds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="bookmarks-list">
    <% @bookmarks.each do |b| %>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.url %></td>
        <td>
          <% b.categories.each do |c| %>
            <%= c %> <br>
          <% end %>
        </td>
        <td>
          <% b.kinds.each do |k| %>
            <%= k %> <br>
          <% end %>
        </td>
        <td><%= link_to 'Show', bookmark_path(b) %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(b) %></td>
        <td><%= link_to 'Destroy', bookmark_path(b), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
